{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/widgetarian/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/widgetarian",
        "tsConfig": "libs/widgetarian/tsconfig.lib.json",
        "project": "libs/widgetarian/package.json",
        "entryFile": "libs/widgetarian/src/index.tsx",
        "external": ["react/jsx-runtime", "react", "react-dom"],
        "rollupConfig": "libs/widgetarian/rollup.config.js",
        "compiler": "babel",
        "format": ["esm", "cjs"],
        "generateExportsField": true,
        "javascriptEnabled": true,
        "assets": [
          {
            "glob": "libs/widgetarian/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/widgetarian/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/widgetarian"],
      "options": {
        "jestConfig": "libs/widgetarian/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
